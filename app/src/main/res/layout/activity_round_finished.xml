<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.awesome.programmiernacht.roundFinished"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/roundFinished_activity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Runde zuende!"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30sp"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Erreichte Punktzahlen: "
            android:id="@+id/textView_totalPoints"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30sp"
            android:textSize="30sp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weiter!"
            android:id="@+id/button_Continue"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12sp"
            android:width="50sp"
            android:onClick="continueGame"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spiel beenden."
        android:id="@+id/button_EndGame"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12sp"
        android:width="50sp"
        android:onClick="endGame"/>

    </LinearLayout>

