<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    tools:context="com.example.awesome.programmiernacht.gameFinished"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:weightSum="1"
    android:id="@+id/gameFinished">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Spiel vorbei"
        android:id="@+id/textViewGameFinished"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30sp"
        android:textSize="30sp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Gruppe GGGG gewinnt"
    android:id="@+id/textViewWinnerGroup"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="30sp"
    android:textSize="30sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nochmal spielen"
        android:id="@+id/buttonPlayAgain"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:clickable="true"
        android:onClick="playAgain" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="HauptmenÃ¼"
        android:id="@+id/buttonMainmenu"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:clickable="true"
        android:onClick="mainMenu" />



</LinearLayout>

